# Use the official Python image
FROM python:3.10-alpine3.13
LABEL maintainer="rp"

# Set environment variables
ENV PYTHONUNBUFFERED 1

# Copy the requirements and app files
COPY ./requirements.txt /tmp/requirements.txt
COPY ./app /app

# Set working directory
WORKDIR /app

# Expose the port
EXPOSE 8000

# Install build dependencies and then install Python dependencies
RUN apk add --no-cache --virtual .build-deps \
        gcc musl-dev python3-dev libffi-dev jpeg-dev zlib-dev \
        freetype-dev lcms2-dev openjpeg-dev tiff-dev tk-dev tcl-dev \
    && python -m venv /py \
    && /py/bin/pip install --upgrade pip \
    && /py/bin/pip install -r /tmp/requirements.txt \
    && apk del .build-deps

# Set PATH to the virtual environment
ENV PATH="/py/bin:$PATH"

# Run the migrations and then start the server
CMD ["sh", "-c", "python manage.py migrate && python manage.py runserver 0.0.0.0:8000"]
